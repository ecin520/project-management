<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pytap.project.dao.AddPermissionDao">

    <insert id="insertAddPermission" parameterType="com.pytap.project.entity.AddPermission">
        INSERT INTO additional_permission (name, description, create_time)
        VALUES (
            #{name}, #{description}, #{createTime}
        )
    </insert>
    <update id="updateByAddPermissionId" parameterType="com.pytap.project.entity.AddPermission">
        UPDATE additional_permission SET
        <trim suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </trim>
        WHERE id = #{id}
    </update>
    <delete id="deleteByAddPermissionId" parameterType="long">
        DELETE FROM additional_permission WHERE id = #{id}
    </delete>
    <select id="getAddPermission" resultType="com.pytap.project.entity.AddPermission">
        SELECT id, name, description, create_time FROM additional_permission
        <where>
            <if test="id != null and id != ''">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
        </where>
        LIMIT 1
    </select>
    <select id="listAllAddPermissions" resultType="com.pytap.project.entity.AddPermission">
        SELECT id, name, description, create_time FROM additional_permission
    </select>
    <select id="countAddPermission" resultType="java.lang.Integer">
        SELECT count(*) FROM additional_permission
    </select>

</mapper>